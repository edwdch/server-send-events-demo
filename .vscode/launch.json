    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "sse-server",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "cwd": "${workspaceFolder}/server",
        "program": "main.ts",
        "runtimeArgs": [
          "--loader",
          "tsx",
          "--no-warnings"
        ],
        "outputCapture": "std",
      },
    ]
  }
  